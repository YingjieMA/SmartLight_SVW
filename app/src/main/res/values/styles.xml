<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#000000</item>
    </style>
    <style name="MyEditTextRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorRed</item>
        <item name="colorControlActivated">@color/colorRed</item>
    </style>
    <style name="MyEditTextGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorGreen</item>
        <item name="colorControlActivated">@color/colorGreen</item>
    </style>
    <style name="MyEditTextBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorBlue</item>
        <item name="colorControlActivated">@color/colorBlue</item>
    </style>
    <style name="MyEditTextIntense" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorIntense</item>
        <item name="colorControlActivated">@color/colorIntense</item>
    </style>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

</resources>
